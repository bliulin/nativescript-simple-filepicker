        <Button text="Browse Files" tap="{{ onTap }}" class="btn btn-primary"></Button>
        <Label text="{{ message || 'Please select a file.' }}" textWrap="true" fontSize="14" class="p-20"></Label>
    </StackLayout>
</Page>
